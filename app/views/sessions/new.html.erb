<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="text-center">サインイン</h1>
    <%= form_with url: login_path, local: true, data: { turbo: false } do |f| %>
      <div class="form-group py-2">
        <%= f.label :email, t('activerecord.attributes.user.email') %><br>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group py-2">
        <%= f.label :password, t('activerecord.attributes.user.password') %><br>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group text-center py-2">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
      <div class="text-center py-3">
        <%= link_to auth_at_provider_path(provider: :google), class: "btn btn-outline-secondary" do %>
          <i class="fa-brands fa-google"></i> Login with Google account
        <% end %>
      </div>
    <% end %>
  </div>
</div>

