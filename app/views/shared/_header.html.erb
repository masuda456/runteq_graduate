<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to("", class: "navbar-brand") do %>
    <%= image_tag "" %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <div class='dropdown-menu dropdown-menu-end'>
          </div>
        </li>
        <li class='nav-item'>
        <% if logged_in? %>
        <%= current_user.name %>
        <%= link_to t('サインアウト'), logout_path, data: { turbo_method: :delete }, class: 'btn' %>
      <% else %>
        <%= link_to t('サインイン'), login_path, class: 'btn' %>
        <%= link_to t('サインアップ'), signup_path, class: 'btn' %>
      <% end %>
        </li>
      </ul>
